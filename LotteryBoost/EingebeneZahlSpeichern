File 2:

<?php
$anzahl= $_POST["anzahl"];
echo "Gruppenanzahl: $anzahl<br>";

function Ausgabe(){
    global $anzahl;
    for ($i = 0; $i < $anzahl; $i++) {
        echo "Fragegruppe erstellt";
    }
}
Ausgabe();


?>
